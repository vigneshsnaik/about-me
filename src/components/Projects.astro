<section class="box projects">
  <h2>Projects</h2>
  <div
    class="w-full px-10 md:px-20 py-8 rounded-md flex flex-row center flex-wrap gap-2"
  >
    {
      projects.map((project) => (
        <div class="project">
          <h2>{project.title}</h2>

          <p>
            {project.description}
            <a href={`#${project.id}`}> more</a>
